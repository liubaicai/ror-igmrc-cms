
<body style="background-color: #f4f4f4;">

<%= render :partial => 'layouts/notice' %>

<header class="site-header jumbotron">

  <%= render :partial => 'layouts/sitenav' %>

  <div class="container">
    <div class="row">
      <div class="col-xs-12"><h2>详细信息</h2>
      </div>
    </div>
  </div>
</header>

<section class="content-wrap" style="margin-top: 20px;">
  <div class="container">

    <div class="row">
      <div class="col-md-9">
        <iframe id="iframe" name="mainFrame" scrolling="no"
                frameborder="0"
                src="userinfo.html"
                style="padding: 0px; width: 100%; margin:0;min-height:750px;float: right; ">
        </iframe>

      </div>
      <div class="col-md-3" style="background-color: white;">
        <div class="list-group packages">
          <a class="package list-group-item" style="background-color: white;border: none;">
            <div class="row">
              <div class="col-md-12" style="text-align: center;">
                <h3 class="package-name"><span>会员中心</span>
                </h3>
              </div>

            </div>
          </a>
          <div class="row">
            <div class="col-md-12">
              <div style="width: 100%;text-align: center;">
                <div href="#" class="thumbnail"
                     style="height: 184px; width: 184px;border-radius: 92px; padding: 1px;text-align: center;margin: 0 auto;">
                  <img id="user_avatar" src="<%= @user.avatar %>"
                       data-holder-rendered="true"
                       style="height: 180px; width: 180px;border-radius: 90px; display: block;">
                </div>
                <h3 class="package-name" style="margin-bottom: 30px;">
                  <%= @user.username %>
                </h3>
              </div>

              <div class="list-group member-center-menu">
                <a href="userinfo.html" target="mainFrame" class="list-group-item active">个人信息</a>
                <a href="comments.html" target="mainFrame" class="list-group-item">我的评论</a>
                <a href="messages.html" target="mainFrame" class="list-group-item">站内信</a>
                <a href="changepassword.html" target="mainFrame" class="list-group-item">修改密码</a>
                <!--<a href="changephone.html" target="mainFrame" class="list-group-item">修改手机号</a>-->
                <a href="/users/logout" class="list-group-item">退出</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<footer id="footer" class="footer hidden-print" style="background-color: white">
  <div class="mostused-packages text-center hidden-xs hidden-sm" style="background-color: white;border:none;">

    <%= render :partial => 'layouts/contact_bottom' %>

  </div>
  <div class="copy-right"><span>© 2013-2016</span> <a href="#" target="_blank">赣ICP备3838433号</a>
    <span>赣公网安备12311456892221</span></div>
</footer>
<script>
  $(document).ready(function () {
    $('.member-center-menu a').click(function () {
      $(this).parent().parent().find('a').removeClass('active');
      $(this).parent().parent().find('a').removeClass('active');
      $(this).addClass('active');
    });
  });

</script>
</body>